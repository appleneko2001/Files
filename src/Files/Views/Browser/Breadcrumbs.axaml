                        <TextBlock Text="{CompiledBinding Header}"/>
                    </Button>
                </Border>
            </DataTemplate>
            
            <DataTemplate x:Key="EditNode" DataType="viewModel:BreadcrumbNodeEditViewModel">
                <Border VerticalAlignment="Center"
