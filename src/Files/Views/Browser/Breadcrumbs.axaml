                            <TextBlock Text="{CompiledBinding Header}"/>
                        </StackPanel>
                    </Button>
                </Border>
            </DataTemplate-->
        </RecyclingElementFactory.Templates>
    </RecyclingElementFactory>
</ResourceDictionary>